<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!--
    🎮 Tetris 메인 게임 UI
    Spring Boot와 통합된 JavaFX FXML
    컨트롤러: seoultech.se.client.controller.MainController (@Component)
-->
<HBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="seoultech.se.client.controller.MainController"
      styleClass="main-container">
   
   <children>
      <!-- 🎨 게임 화면 영역 -->
      <VBox styleClass="game-area">
         <children>
            <Label text="🎮 Tetris Game" styleClass="title">
               <font>
                  <Font name="Arial Bold" size="24.0" />
               </font>
            </Label>
            
            <!-- 게임 캔버스 -->
            <Canvas fx:id="gameCanvas" height="600.0" width="300.0" 
                    styleClass="game-canvas" />
         </children>
         
         <padding>
            <Insets bottom="20.0" left="20.0" right="10.0" top="20.0" />
         </padding>
      </VBox>

      <!-- 📊 정보 및 컨트롤 패널 -->
      <VBox styleClass="control-panel" spacing="15.0">
         <children>
            <!-- 점수 정보 -->
            <VBox styleClass="score-section" spacing="10.0">
               <children>
                  <Label text="📊 게임 정보" styleClass="section-title">
                     <font>
                        <Font name="Arial Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <Label fx:id="scoreLabel" text="점수: 0" styleClass="info-label">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  
                  <Label fx:id="levelLabel" text="레벨: 1" styleClass="info-label">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  
                  <Label fx:id="linesLabel" text="라인: 0" styleClass="info-label">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </VBox>

            <Separator />

            <!-- 게임 컨트롤 -->
            <VBox styleClass="control-section" spacing="10.0">
               <children>
                  <Label text="🎮 게임 컨트롤" styleClass="section-title">
                     <font>
                        <Font name="Arial Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <Button fx:id="startButton" text="🚀 시작" styleClass="control-button" 
                          prefWidth="120.0">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Button>
                  
                  <Button fx:id="pauseButton" text="⏸️ 일시정지" styleClass="control-button" 
                          prefWidth="120.0" disable="true">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Button>
                  
                  <Button fx:id="resetButton" text="🔄 리셋" styleClass="control-button" 
                          prefWidth="120.0">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Button>
               </children>
            </VBox>

            <Separator />

            <!-- 조작법 안내 -->
            <VBox styleClass="help-section" spacing="5.0">
               <children>
                  <Label text="⌨️ 조작법" styleClass="section-title">
                     <font>
                        <Font name="Arial Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <Label text="← → : 좌우 이동" styleClass="help-label">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Label>
                  
                  <Label text="↓ : 빠른 낙하" styleClass="help-label">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Label>
                  
                  <Label text="↑ : 회전" styleClass="help-label">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Label>
                  
                  <Label text="Space : 즉시 낙하" styleClass="help-label">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
         
         <padding>
            <Insets bottom="20.0" left="10.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</HBox>
