{
    // ======================================================================
    // 🎯 Tetris Project - 공유용 VS Code 설정 (OS 무관)
    // ======================================================================
    "java.jdt.ls.java.home": "${env:JAVA_HOME}",
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-21",
            "path": "${env:JAVA_HOME}",
            "default": true
        }
    ],

    "java.jdt.ls.vmargs": "-XX:+UseParallelGC -Xmx2G --add-opens java.base/java.lang=ALL-UNNAMED",
    
    // ======================================================================
    // ⚙️ 프로젝트 공통 설정 (아래는 그대로 유지)
    // ======================================================================
    
    // Gradle 프로젝트 지원
    "java.import.gradle.enabled": true,
    "java.import.gradle.wrapper.enabled": true,
    
    // 기본 Java 설정
    "java.compile.nullAnalysis.mode": "disabled",
    "java.saveActions.organizeImports": true,
    
    // 에디터 기본 설정
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    
    // 불필요한 파일 숨기기
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "java.project.explorer.showNonJavaResources": true
}
